<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gatchasim.gatchasim.JavaFX.MainController"
      spacing="10.0"
      prefHeight="402.0" prefWidth="632.0"
      fillWidth="true">

   <padding>
      <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
   </padding>

   
   <Button fx:id="CCButton"
           text="Cookie Clicker"
           onAction="#ShowCC"
           maxWidth="Infinity"
           maxHeight="Infinity"
           style="-fx-background-color: gold;"
           VBox.vgrow="ALWAYS" />

   <Button fx:id="InventoryButton"
           text="Inventory"
           onAction="#ShowInventory"
           maxWidth="Infinity"
           maxHeight="Infinity"
           style="-fx-background-color: green;"
           textFill="WHITE"
           VBox.vgrow="ALWAYS" />

   <Button fx:id="BannerButton"
           text="Banner Button"
           onAction="#ShowBanner"
           maxWidth="Infinity"
           maxHeight="Infinity"
           style="-fx-background-color: #5DADE2; -fx-text-fill: white;"
           VBox.vgrow="ALWAYS" />

   <Button fx:id="Logout_Button"
           text="KijelentkezÃ©s"
           onAction="#Logout"
           maxWidth="Infinity"
           maxHeight="Infinity"
           style="-fx-background-color: red;"
           textFill="WHITE"
           VBox.vgrow="ALWAYS">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Button>

</VBox>
