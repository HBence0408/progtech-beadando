<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20" style="-fx-background-color: #fefae0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gatchasim.gatchasim.JavaFX.CCController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="currencyLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Coins: 0" />
    <StackPane prefHeight="150.0" prefWidth="200.0">
      <children>
         <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@PlaceHolder.jpg" />
            </image></ImageView>
         <Button fx:id="clickButton" mnemonicParsing="false" opacity="0.0" prefHeight="200.0" prefWidth="145.0" text="Button" textFill="TRANSPARENT" />
      </children></StackPane>


    <Button fx:id="BackToMenuButton" style="-fx-background-color: red; -fx-text-fill: white;" text="Vissza a Főmenübe" textFill="WHITE" />
</VBox>
