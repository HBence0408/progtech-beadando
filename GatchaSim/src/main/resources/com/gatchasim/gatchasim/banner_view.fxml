    <Label text="Your Coins:" />
    <Label fx:id="coinLabel" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onSinglePull" text="Pull 1" />
        <Button onAction="#onTenPull" text="Pull 10" />
    </HBox>

    <Label text="Results:" />
